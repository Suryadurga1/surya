/*write a C program to find the sum of individual digits of a possitive integer*/

#include<stdio.h>
#include<conio.h>
main()
{
int n,rem,sum=0;
clrscr();
printf("\nEnter a +ve integer");
scanf("%d",&n);
while(n>0)
{
rem=n%10;
sum=sum+rem;
n=n/10;
}
printf("\nThe sum of digits is %d",sum);
getch();
}
